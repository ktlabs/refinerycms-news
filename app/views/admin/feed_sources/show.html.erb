<%= form_for [:admin, @feed_source] do |f| %>
  <%= render :partial => "locale_picker",
             :locals => {
               :current_locale => Thread.current[:globalize_locale]
             } if defined?(::Refinery::I18n) %>

  <div class='field'>
    <%= f.label :name %>
    <%= @feed_source.name %>
  </div>

  <div>
    <%= f.label :active %>
    <%= @feed_source.active %>
  </div>

  <div class='field'>
    <%= f.label :url %>
    <%= @feed_source.url %>
  </div>

  <div class='field'>
    <%= f.label :pattern %>
    <%= @feed_source.pattern %>
  </div>

  <div class='field'>
    <%= f.label :img_pattern %>
    <%= @feed_source.img_pattern %>
  </div>

  <div class='field'>
    <%= f.label :etag %>
    <%= @feed_source.etag %>
  </div>

  <div class='field'>
    <%= f.label :last_modified %>
    <%= @feed_source.last_modified %>
  </div>

  <div class='field'>
    <%= f.label :last_entry_url %>
    <%= @feed_source.last_entry_url %>
  </div>
<% end %>